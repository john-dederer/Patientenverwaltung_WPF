<Window x:Class="Patientenverwaltung_WPF.InfoMessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Patientenverwaltung_WPF"
        mc:Ignorable="d"
        Title="InfoMessageWindow" Height="150" Width="300" ResizeMode="NoResize" WindowStyle="None">
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="{DynamicResource BackgroundColorMain}"/>
        </Grid.Background>

        <TextBlock x:Name="txtField" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap" Height="50" Width="200" MaxWidth="250" Text="Default text" Foreground="White" FontFamily="Arial" FontWeight="Bold"/>
    </Grid>
</Window>
