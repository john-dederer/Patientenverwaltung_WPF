        <!-- Main content -->
        <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Left" MaxWidth="300">
            <!-- Name -->
            <TextBlock Style="{DynamicResource ItemControl}" TextTrimming="CharacterEllipsis">
                <TextBlock.Text>
                    <MultiBinding StringFormat="{}{0} {1}">
                        <Binding Path="Firstname" />
                        <Binding Path="Secondname"/>
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>

            <!-- Birthday -->
            <TextBlock Style="{DynamicResource ItemControl}" Text="{Binding Birthday, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=dd.MM.yyyy}"/>
        </StackPanel>
    </Grid>
</UserControl>
